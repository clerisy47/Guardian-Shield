{
  "manifest_version": 2,
  "name": "Fraud Detection",
  "version": "1.0",
  "description": "Detects possible frauds and phising in user's mail.",
  "icons": {
    "16": "mail.png",
    "48": "mail.png",
    "128": "mail.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "mail.png",
      "48": "mail.png",
      "128": "mail.png"
    },
    "default_title": "Click to activate the extension"
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}